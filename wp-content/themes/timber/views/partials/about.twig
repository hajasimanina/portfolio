{% if portfolio.contacts_1 is not empty %}
    <section id="{{ portfolio.about_me_section_title|sanitize }}" class="about section-content-item">
        <div class="section-heading text-center">
            <h2>{{ portfolio.about_me_section_title }}</h2>
        </div>
        <div class="container">
            <div class="about-content">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="single-about-txt">
                            <h3>
                                {{ portfolio.about_me_title }}
                            </h3>
                            <p>
                                {{ portfolio.about_me_text }}
                            </p>
                            {% if portfolio.contacts_1 is not empty %}
                                <div class="row">
                                    {% for contact_1 in portfolio.contacts_1 %}
                                        <div class="col-sm-4">
                                            <div class="single-about-add-info">
                                                <h3>{{ contact_1.label }}</h3>
                                                <p>{{ contact_1.value }}</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-sm-offset-1 col-sm-5">
                        <div class="single-about-img">
                            {{ portfolio.portfolio_photo }}
                            {% if portfolio.contacts_2 is not empty %}
                                <div class="about-list-icon">
                                    <ul>
                                        {% for contact_2 in portfolio.contacts_2 %}
                                            <li>
                                                <a href="{{ contact_2.value }}">
                                                    <i class="dashicons {{ contact_2.icon }}" aria-hidden="true"></i>
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endif %}