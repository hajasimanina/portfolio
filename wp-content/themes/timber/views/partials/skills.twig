{% if portfolio.skills1 is not empty %}
    <section id="{{ portfolio.skill_section_title|sanitize }}" class="skills section-content-item">
        <div class="skill-content">
            <div class="section-heading text-center">
                <h2>{{ portfolio.skill_section_title }}</h2>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="single-skill-content">
                            {% for skill1 in  portfolio.skills1 %}
                                <div class="barWrapper">
                                    <span class="progressText">{{ skill1.name }}</span>
                                    <div class="single-progress-txt">
                                        <div class="progress ">
                                            <div class="progress-bar" role="progressbar"
                                                 aria-valuenow="{{ skill1.level }}"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"
                                                 style="">
                                            </div>
                                        </div>
                                        <h3>{{ skill1.level }}</h3>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% if portfolio.skills2 is not empty %}
                        <div class="col-md-6">
                            <div class="single-skill-content">
                                {% for skill2 in  portfolio.skills2 %}
                                    <div class="barWrapper">
                                        <span class="progressText">{{ skill2.name }}</span>
                                        <div class="single-progress-txt">
                                            <div class="progress ">
                                                <div class="progress-bar" role="progressbar"
                                                     aria-valuenow="{{ skill2.level }}"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100"
                                                     style="">
                                                </div>
                                            </div>
                                            <h3>{{ skill2.level }}%</h3>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endif %}